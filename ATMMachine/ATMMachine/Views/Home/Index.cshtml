@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Middle V@lley Community Bank</h1>
    <p class="lead">MVC ATM BANK is powerful and secure bank</p>
    
</div>
<div class="row">
    <div class="col-md-6 margin-top-20">
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-circle-arrow-down"></span>Withdrawal
        </a>
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-flash"></span>Quick Cash
        </a>
        <a href="@Url.Action("Details","CheckingAccount")" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-question-sign"></span>Balance Enquiry
        </a>
    </div>

    <div class="col-md-6 margin-top-20">
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-print"></span>Print Statement
        </a>
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-transfer"></span>Transfer Funds
        </a>
        <a href="#" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-circle-arrow-up"></span>Deposits
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <h2>Register</h2>
        <p>
            Start registering with us
        </p>
        <p>@Html.ActionLink("Register", "Register", "Account",null,new { @class="btn btn-default"})</p>
    </div>
    <div class="col-md-4">
        <h2>Login</h2>
        <p>Login with your existing account</p>
        <p>@Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-default" })</p>
    </div>
    
</div>